{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@js/*": [
        "src/js/*"
      ],
      "@css/*": [
        "src/css/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ],
      "@snippets/*": [
        "src/components/snippets/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  }
}
